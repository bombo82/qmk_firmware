{
    "keyboard_name": "BomboPad",
    "maintainer": "Gianni Bombelli (bombo82) <bombo82@giannibombelli.it>",
    "manufacturer": "Gianni Bombelli (bombo82)",
    "url": "https://github.com/bombo82/bombopad",
    "description": "BomboPad is an open-source, versatile 12-key macropad featuring dual rotary encoders and display support.",
    "tags": ["macropad", "encoder", "oled", "handwired"],
    "usb": {
        "vid": "0xFEED",
        "pid": "0x200B",
        "device_version": "0.3.0"
    },
    "features": {
        "encoder": true,
        "oled": true,
        "bootmagic_lite": true
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 1], "x": 1, "y": 0},
                {"matrix": [0, 2], "x": 2, "y": 0},
                {"matrix": [0, 3], "x": 3, "y": 0},

                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1},
                {"matrix": [1, 2], "x": 2, "y": 1},
                {"matrix": [1, 3], "x": 3, "y": 1},

                {"matrix": [2, 0], "x": 0, "y": 2},
                {"matrix": [2, 1], "x": 1, "y": 2},
                {"matrix": [2, 2], "x": 2, "y": 2},
                {"matrix": [2, 3], "x": 3, "y": 2}
            ]
        }
    }
}
